<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sty5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B857C8"
    tools:context=".story5">

    <TextView
        android:id="@+id/chap5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Chapter Five"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv5A"
        android:layout_width="385dp"
        android:layout_height="170dp"
        android:layout_marginTop="16dp"
        android:text="I woke up to a sweet aroma in the house, Don was preparing breakfast for me,breakfast in bed.Something i had always seen in telenovelas.My mother would beat the hell out of me if she ever had that i allowed a man to prepare breakfast for me.Anyways,she was far back in the village and i was in the city enjoying my life.Don said that i had dozed off the previous nght and he covered me and let me sleep.
"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chap5" />

    <TextView
        android:id="@+id/tv5B"
        android:layout_width="376dp"
        android:layout_height="135dp"
        android:layout_marginTop="12dp"
        android:text="I asked him to serve first and take his tea as i go take a shower since that was always my routine.I could never take breakfast without bathing.Some few minutes i was already back and put on my beautiful skater dress.Sadly my zip caught my clothe and ihadto ask Don for help.I needed him to fix it while in it.
"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.742"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv5A" />

    <TextView
        android:id="@+id/tv5C"
        android:layout_width="385dp"
        android:layout_height="199dp"
        android:layout_marginTop="8dp"
        android:text="He did it very gently.My mind started racing,i started immagining how happy i would be if he was my boyfriend.In the process of thinking i saw him infront of me,looking at me weirdly.I asked to now what was going well.He said that he liked me and wanted me to be his girlfriend.I had been thinking of him so much and i felt like i was feeling the same way.It was crazy,i liked him too but i didn't want to admit it.Before i could talk,he left,without saying a word.I was perplexed."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv5B" />

    <Button
        android:id="@+id/btn10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#FAF7F7"
        android:text="Previous"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>